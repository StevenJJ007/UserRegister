    <RelativeLayout
        android:id="@+id/Rl2"
        android:layout_width="1200px"
        android:layout_height="166px"
        android:layout_marginLeft="40px"
        android:layout_marginTop="30px"
        android:background="@drawable/backinfo">

        <!--第三行信息-->
        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="1200px"
            android:layout_height="80px"
            android:paddingTop="10px">

            <!--车牌号-->
            <LinearLayout
                android:id="@+id/ll7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130px"
                android:layout_marginTop="5px"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="车牌号"
                    android:textColor="#ffffff"
                    android:textSize="38px" />

                <FrameLayout
                    android:layout_width="220px"
                    android:layout_height="66px"
                    android:layout_marginLeft="10px"
                    android:background="@drawable/small">

                    <EditText
                        android:id="@+id/car_number"
                        android:layout_width="200px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:imeOptions="actionNext"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:textSize="26px" />

                </FrameLayout>
            </LinearLayout>

            <!--车型-->
            <LinearLayout
                android:id="@+id/ll8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="5px"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="车型"
                    android:textColor="#ffffff"
                    android:textSize="38px" />

                <FrameLayout
                    android:layout_width="220px"
                    android:layout_height="66px"
                    android:layout_marginLeft="10px"
                    android:background="@drawable/small">

                    <TextView
                        android:id="@+id/user_vehicleType"
                        android:layout_width="200px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:paddingLeft="5px" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <!--第四行信息-->
        <LinearLayout
            android:id="@+id/l4"
            android:layout_width="1200px"
            android:layout_height="80px"
            android:layout_below="@+id/l3"
            android:paddingTop="10px">

            <!--车架号-->
            <LinearLayout
                android:id="@+id/ll10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130px"
                android:layout_marginTop="5px"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="车架号"
                    android:textColor="#ffffff"
                    android:textSize="38px" />

                <FrameLayout
                    android:layout_width="220px"
                    android:layout_height="66px"
                    android:layout_marginLeft="10px"
                    android:background="@drawable/small">

                    <EditText
                        android:id="@+id/user_vin"
                        android:layout_width="200px"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:imeOptions="actionNext"
                        android:maxLength="17"
                        android:singleLine="true"
                        android:textSize="26px" />
                </FrameLayout>

                <TextView
                    android:id="@+id/user_carmera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="30dp" />
            </LinearLayout>

            <!--4S店-->
            <LinearLayout
                android:id="@+id/ll11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="5px"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="4s店"
                    android:textColor="#ffffff"
                    android:textSize="38px" />

                <FrameLayout
                    android:layout_width="220px"
                    android:layout_height="66px"
                    android:layout_marginLeft="10px"
                    android:background="@drawable/small">

                    <TextView
                        android:id="@+id/user_orgId"
                        android:layout_width="200px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:ellipsize="end"
                        android:enabled="false"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="26px" />
                </FrameLayout>

                <ImageButton
                    android:id="@+id/inquire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="10px"
                    android:background="@null"
                    android:src="@drawable/s" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

